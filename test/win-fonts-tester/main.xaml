<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="script runner" Height="491.29" Width="724.5"
    x:Name="Window">
    <Grid Margin="0,10,13,0" Height="435" VerticalAlignment="Top">

        <GroupBox
            Header="logs"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            Height="238"
            Width="683">
            <Grid
                HorizontalAlignment="Left"
                Height="237"
                VerticalAlignment="Top"
                Width="673" Margin="0,0,-2,-22">
                <RichTextBox
                    x:Name="txtLogs"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    Margin="10,10,10,0"
                    Height="203"
                    VerticalAlignment="Top"
                    IsReadOnly="True"
                    AcceptsTab="True"
                    />
            </Grid>
        </GroupBox>

        <GroupBox
            Header="actions"
            HorizontalAlignment="Left"
            Margin="15,275,0,0"
            VerticalAlignment="Top"
            Height="106"
            Width="350">
            <Grid HorizontalAlignment="Left" Width="330" Height="76" VerticalAlignment="Top">
                <Label x:Name="label__1" Content="operations" HorizontalAlignment="Left" Margin="9,1,0,0" VerticalAlignment="Top" Width="311"/>
                <Button x:Name="button_close" Content="Close" HorizontalAlignment="Left" Margin="235,36,0,0" VerticalAlignment="Top" Width="75"/>
                <Button x:Name="button_clear" Content="Clear" HorizontalAlignment="Left" Margin="133,36,0,0" VerticalAlignment="Top" Width="75"/>
                <Button x:Name="button_play" Content="Refresh" HorizontalAlignment="Left" Margin="30,36,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </GroupBox>
        
        <GroupBox
            x:Name="groupboxFiles"
            Header="config" Margin="370,277,0,0"
            VerticalAlignment="Top"
            Height="106" HorizontalAlignment="Left" Width="333">
            <Grid Margin="0,0,29,-23" Height="106">
                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Label Content="font category" VerticalAlignment="Center"/>
                        <ComboBox x:Name="comboFontCategory" Width="165" Margin="8,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Label x:Name="labelIn" Content="font" VerticalAlignment="Center"/>
                        <ComboBox x:Name="comboSelectedFont" Width="165" Margin="57,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="labelOut" Content="json cfg" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtPathOut" Width="165" Margin="24,0,0,0" IsEnabled="true"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StatusBar DockPanel.Dock="Bottom" HorizontalAlignment='center' VerticalAlignment='Bottom' Width='auto' Height="23" Margin="0,0,0,5">
            <StatusBarItem Width="724" HorizontalAlignment='center'>
                <TextBlock Name="lblCursorPosition" HorizontalAlignment='center' VerticalAlignment='Bottom' Width='auto'  IsEnabled="true" />
            </StatusBarItem>
        </StatusBar>
        <Button x:Name="btnBrowseIn" Content="confirm" HorizontalAlignment="Left" Margin="622,306,0,0" VerticalAlignment="Top" Width="48"/>
        <Button x:Name="btnBrowseOut" Content="..." HorizontalAlignment="Left" Margin="622,345,0,0" VerticalAlignment="Top" Width="48"  IsEnabled="true"/>
    </Grid>
</Window>
